		--border-radius-md: 12px;
		--border-radius-lg: 16px;
		--border-radius-xl: 20px;
		--border-radius-full: 50px;
		
		/* Ombres */
		--shadow-sm: 0 4px 6px rgba(0, 0, 0, 0.05);
		--shadow-md: 0 10px 25px rgba(0, 0, 0, 0.1);
		--shadow-lg: 0 20px 40px rgba(0, 0, 0, 0.15);
		--shadow-xl: 0 25px 50px rgba(0, 0, 0, 0.2);
		
		/* Transitions */
		--transition-fast: 0.2s ease;
		--transition-normal: 0.3s ease;
		--transition-slow: 0.5s ease;
		--transition-bounce: 0.4s cubic-bezier(0.4, 0, 0.2, 1);
	}
	
	html {
		font-family: 'Poppins', sans-serif;
		background-color: var(--blanco-puro);
		scroll-behavior: smooth;
		font-size: 16px;
		line-height: 1.6;
	}
	
	body {
		margin: 0;
		font-size: 18px;
		color: var(--gris-oscuro);
		overflow-x: hidden;
		font-weight: 400;
	}
	
	*, *::before, *::after {
		box-sizing: border-box;
		margin: 0;
		padding: 0;
	}
	
	/* Typographie cohérente */
	h1, h2, h3, h4, h5, h6 {
		font-family: 'Georgia', serif;
		font-weight: 700;
		line-height: 1.2;
		margin-bottom: var(--spacing-md);
	}
	
	h1 {
		font-size: clamp(2.5rem, 5vw, 7rem);
		font-weight: 900;
	}
	
	h2 {
		font-size: clamp(2rem, 4vw, 3.5rem);
		font-weight: 900;
	}
	
	h3 {
		font-size: clamp(1.5rem, 3vw, 2rem);
		font-weight: 700;
	}
	
	p {
		font-size: clamp(1rem, 2vw, 1.25rem);
		line-height: 1.7;
		margin-bottom: var(--spacing-md);
	}
	
	/* Animations globales */
	@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(30px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}
	
	@keyframes fadeInLeft {
		from {
			opacity: 0;
			transform: translateX(-30px);
		}
		to {
			opacity: 1;
			transform: translateX(0);
		}
	}
	
	@keyframes fadeInRight {
		from {
			opacity: 0;
			transform: translateX(30px);
		}
		to {
			opacity: 1;
			transform: translateX(0);
		}
	}
	
	@keyframes scaleIn {
		from {
			opacity: 0;
			transform: scale(0.8);
		}
		to {
			opacity: 1;
			transform: scale(1);
		}
	}
	
	@keyframes float {
		0%, 100% {
			transform: translateY(0px);
		}
		50% {
			transform: translateY(-10px);
		}
	}
	
	/* Classes d'animation utilitaires */
	.fade-in-up {
		animation: fadeInUp 0.8s ease forwards;
	}
	
	.fade-in-left {
		animation: fadeInLeft 0.8s ease forwards;
	}
	
	.fade-in-right {
		animation: fadeInRight 0.8s ease forwards;
	}
	
	.scale-in {
		animation: scaleIn 0.8s ease forwards;
	}
	
	.float {
		animation: float 3s ease-in-out infinite;
	}
	
	/* Effet de parallaxe subtil */
	.parallax {
		transform: translateZ(0);
		will-change: transform;
	}
	
	/* Amélioration du scroll sur mobile */
	@media (max-width: 768px) {
		html {
			scroll-behavior: auto;
		}
		
		body {
			font-size: 16px;
		}
	}
	
	/* Optimisations de performance */
	.animate-on-scroll {
		will-change: opacity, transform;
	}
	
	/* Effet de focus amélioré pour l'accessibilité */
	a:focus,
	button:focus {
		outline: 2px solid var(--azul-vibrante);
		outline-offset: 2px;
	}
	
	/* Transitions fluides pour tous les éléments interactifs */
	a, button, .btn {
		transition: all var(--transition-normal);
	}
	
	/* Styles pour les badges de section */
	.section-badge {
		display: inline-block;
		background: linear-gradient(135deg, var(--dorado-acento), var(--dorado-claro));
		color: var(--gris-oscuro);
		font-size: 0.875rem;
		font-weight: 700;
		padding: var(--spacing-xs) var(--spacing-sm);
		border-radius: var(--border-radius-full);
		text-transform: uppercase;
		letter-spacing: 1px;
		margin-bottom: var(--spacing-md);
	}
	
	/* Styles pour les boutons cohérents */
	.btn-primary {
		display: inline-flex;
		align-items: center;
		gap: var(--spacing-xs);
		font-weight: 700;
		font-size: 1.1rem;
		color: var(--gris-oscuro);
		background: linear-gradient(135deg, var(--dorado-acento), var(--dorado-claro));
		padding: var(--spacing-sm) var(--spacing-lg);
		text-decoration: none;
		border-radius: var(--border-radius-md);
		transition: all var(--transition-bounce);
		box-shadow: var(--shadow-md);
		border: none;
		cursor: pointer;
	}
	
	.btn-primary:hover {
		transform: translateY(-3px);
		box-shadow: var(--shadow-lg);
	}
	
	.btn-secondary {
		display: inline-flex;
		align-items: center;
		gap: var(--spacing-xs);
		font-weight: 600;
		font-size: 0.95rem;
		color: var(--azul-vibrante);
		background: rgba(2, 63, 194, 0.05);
		padding: var(--spacing-xs) var(--spacing-md);
		text-decoration: none;
		border-radius: var(--border-radius-md);
		border: 2px solid rgba(2, 63, 194, 0.2);
		transition: all var(--transition-normal);
	}
	
	.btn-secondary:hover {
		background: var(--azul-vibrante);
		color: var(--blanco-puro);
		border-color: var(--azul-vibrante);
		transform: translateY(-2px);
	}
	
	/* Conteneurs cohérents */
	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 var(--spacing-md);
	}
	
	.section-padding {
		padding: var(--spacing-4xl) 0;
	}
	
	/* Grilles responsives */
	.grid {
		display: grid;
		gap: var(--spacing-lg);
	}
	
	.grid-2 {
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
	}
	
	.grid-3 {
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
	}
	
	.grid-4 {
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
	}
	
	/* Utilitaires de texte */
	.text-gradient {
		background: linear-gradient(135deg, var(--blanco-puro), var(--blanco-suave));
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}
	
	.text-center {
		text-align: center;
	}
	
	.text-left {
		text-align: left;
	}
	
	.text-right {
		text-align: right;
	}
	
	/* Utilitaires d'espacement */
	.mb-0 { margin-bottom: 0; }
	.mb-1 { margin-bottom: var(--spacing-xs); }
	.mb-2 { margin-bottom: var(--spacing-sm); }
	.mb-3 { margin-bottom: var(--spacing-md); }
	.mb-4 { margin-bottom: var(--spacing-lg); }
	.mb-5 { margin-bottom: var(--spacing-xl); }
	
	.mt-0 { margin-top: 0; }
	.mt-1 { margin-top: var(--spacing-xs); }
	.mt-2 { margin-top: var(--spacing-sm); }
	.mt-3 { margin-top: var(--spacing-md); }
	.mt-4 { margin-top: var(--spacing-lg); }
	.mt-5 { margin-top: var(--spacing-xl); }
</style>