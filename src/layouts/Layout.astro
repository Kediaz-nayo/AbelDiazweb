<style is:global>
	:root {
		--accent: #1d4ed8; /* A deeper, more confident blue */
		--dark: #111827;
		--light: #f9fafb;
		--white: #ffffff;
	}
	html {
		font-family: 'DM Sans', sans-serif;
		background-color: var(--light);
		scroll-behavior: smooth;
	}
	body {
		margin: 0;
		font-size: 18px; /* Slightly larger base font size */
		color: var(--dark);
	}
    *, *::before, *::after {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
    }
</style>