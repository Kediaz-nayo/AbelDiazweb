---
import heroImage from '../assets/hero-background.webp'; // ¡REVISA QUE EL NOMBRE SEA CORRECTO!
---
<section id="hero-section" style={`background-image: url(${heroImage.src});`}>
    <div class="hero-overlay"></div>
    <div class="hero-content">
        <h1>Seguros sin<br>complicaciones.</h1>
    </div>
</section>

<style>
    #hero-section {
        position: relative;
        min-height: 100vh;
        color: var(--blanco-puro);
        
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        padding: 2rem;

        /* --- ESTILOS CLAVE DEL FONDO (CORREGIDOS) --- */
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat; /* <-- ESTA ES LA LÍNEA QUE FALTABA */
    }

    .hero-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(17, 17, 17, 0.5);
        z-index: 1;
    }

    .hero-content {
        position: relative;
        z-index: 2;
    }

    h1 {
        font-size: 7rem;
        font-weight: 900;
        line-height: 1;
        color: var(--blanco-puro);
        text-shadow: 0 4px 15px rgba(0, 0, 0, 0.4);
    }

    @media (max-width: 768px) {
        h1 { font-size: 4rem; }
    }
</style>