---
const nombreNegocio = "Asesor patrimonial y de seguros";
---
<header>
    <a href="/" class="logo">{nombreNegocio}</a>
    <a href="/contacto" class="contact-link">Hablemos</a>
</header>
<style>
    header {
        position: absolute; top: 0; left: 0; width: 100%;
        padding: 2rem; display: flex; justify-content: space-between;
        align-items: center; z-index: 10;
    }
    .logo, .contact-link {
        font-weight: 700; color: var(--blanco-puro); text-decoration: none;
    }
</style>