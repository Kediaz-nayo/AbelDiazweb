---
const nombreNegocio = '<strong>Abel Díaz</strong><br /><em>Asesoría patrimonial y Seguros</em>';
---
<header>
    <a href="/" class="logo" set:html={nombreNegocio}></a>
    <a href="/contacto" class="contact-link">Hablemos</a>
</header>
<style>
    header {
        position: absolute; top: 0; left: 0; width: 100%;
        padding: 2rem; display: flex; justify-content: space-between;
        align-items: center; z-index: 10;
    }
    .logo, .contact-link {
        font-size: 2rem;
        font-weight: 700;
        color: rgb(252, 252, 255);
        text-decoration: none;
    }
    .inclinado {
        font-style: italic !important;
    }
    .logo .inclinado {
        font-style: italic !important;
        font-family: Georgia, 'Times New Roman', Times, serif !important;
        font-weight: 400 !important;
    }
</style>