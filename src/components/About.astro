---
// src/components/About.astro
import { Image } from 'astro:assets';
import dadPhoto from '../assets/dad-photo.webp'; // This assumes you've added the photo!
---
<section id="about-section">
    <div class="about-grid">
        <div class="text-content">
            <h2>I'm [Dad's First Name]. It's nice to meet you.</h2>
            <p>For too long, insurance has been complicated and impersonal. My mission is to change that. As your neighbor in [Your Town], I provide clear, honest advice tailored to your life. No confusing jargon, no hidden feesâ€”just genuine support.</p>
            <a href="/contact" class="about-button">Let's Talk</a>
        </div>
        <div class="image-wrapper">
            <Image src={dadPhoto} alt="A professional and friendly photo of [Dad's Name]" class="profile-image"/>
        </div>
    </div>
</section>

<style>
    #about-section {
        background-color: var(--light);
        padding: 6rem 2rem;
    }
    .about-grid {
        display: grid;
        grid-template-columns: 1fr 1fr; /* Two equal columns */
        align-items: center;
        gap: 4rem;
        max-width: 1200px;
        margin: 0 auto;
    }
    h2 {
        font-size: 3rem;
        font-weight: 700;
        line-height: 1.2;
        margin-bottom: 2rem;
    }
    p {
        font-size: 1.25rem;
        line-height: 1.6;
        margin-bottom: 2rem;
    }
    .about-button {
        display: inline-block;
        font-weight: 700;
        color: var(--white);
        background-color: var(--dark);
        padding: 1rem 2.5rem;
        text-decoration: none;
        border-radius: 8px;
    }
    .profile-image {
        width: 100%;
        height: auto;
        border-radius: 12px;
    }
    @media (max-width: 900px) {
        .about-grid {
            grid-template-columns: 1fr; /* Stack columns on smaller screens */
        }
        .image-wrapper {
            grid-row: 1; /* Make image appear first on mobile */
            margin-bottom: 2rem;
        }
        h2 { font-size: 2.5rem; }
    }
</style>