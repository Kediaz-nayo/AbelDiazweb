---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import ContentBlock from '../components/ContentBlock.astro';
import Testimonios from '../components/Testimonios.astro';
import Servicios from '../components/Servicios.astro';
import Contacto from '../components/Contacto.astro';
---
<Layout 
	title="Asesoría patrimonial y seguros" 
	description="Abel Díaz es el asesor patrimonial y de seguros que te ayudará a construir tu futuro."
>
    <Header />
	<main>
		<Hero />
		<ContentBlock />
		<Servicios />
		<Testimonios />
		<Contacto />
	</main>
</Layout>

<style>
	main {
		overflow-x: hidden;
	}
	
	/* Amélioration de la transition entre sections */
	main > * {
		position: relative;
	}
	
	/* Effet de parallaxe subtil pour les sections */
	main > *:nth-child(even) {
		transform: translateZ(0);
	}
	
	/* Optimisation pour mobile */
	@media (max-width: 768px) {
		main {
			overflow-x: hidden;
		}
	}
</style>