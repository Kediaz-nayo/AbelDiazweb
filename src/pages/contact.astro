---
// src/pages/contact.astro
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro'; // We can reuse our header!
import Footer from '../components/Footer.astro'; // And our footer!
---

<Layout 
    title="Contact - [Dad's Business Name]" 
    description="Get in touch for a free, no-obligation insurance quote or to ask a question."
>
    <Header />

    <main class="contact-page-main">
        <div class="form-container">
            <div class="text-content">
                <h1>Let's Talk.</h1>
                <p>
                    Whether you're ready for a quote or just have a few questions, I'm here to help. 
                    Fill out the form below, or feel free to call or email me directly.
                </p>
                <div class="direct-contact">
                    <p><strong>Email:</strong> [your.dad@email.com]</p>
                    <p><strong>Phone:</strong> [(555) 123-4567]</p>
                </div>
            </div>

            <!-- This is the form that Netlify will process -->
            <form name="contact" method="POST" data-netlify="true">
                <input type="hidden" name="form-name" value="contact" />
                
                <div class="form-group">
                    <label for="name">Full Name</label>
                    <input type="text" name="name" id="name" required />
                </div>

                <div class="form-group">
                    <label for="email">Email Address</label>
                    <input type="email" name="email" id="email" required />
                </div>

                <div class="form-group">
                    <label for="message">How can I help you?</label>
                    <textarea name="message" id="message" rows="5" required></textarea>
                </div>
                
                <button type="submit" class="submit-button">Send Message</button>
            </form>

        </div>
    </main>

    <Footer />
</Layout>

<style>
    .contact-page-main {
        background-color: var(--light);
        padding: 8rem 2rem 6rem 2rem;
    }
    .form-container {
        max-width: 1000px;
        margin: 0 auto;
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 4rem;
        align-items: center;
    }
    h1 {
        font-size: 4rem;
        font-weight: 700;
        line-height: 1.1;
        color: var(--dark);
    }
    .text-content p {
        font-size: 1.25rem;
        margin: 1.5rem 0;
        max-width: 450px;
    }
    .direct-contact {
        margin-top: 2rem;
        font-size: 1.1rem;
    }
    .direct-contact p {
        margin: 0.5rem 0;
    }
    .form-group {
        margin-bottom: 1.5rem;
    }
    .form-group label {
        display: block;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }
    .form-group input,
    .form-group textarea {
        width: 100%;
        padding: 0.8rem;
        font-family: 'DM Sans', sans-serif;
        font-size: 1rem;
        border: 1px solid #ccc;
        border-radius: 8px;
        background-color: var(--white);
    }
    .submit-button {
        width: 100%;
        padding: 1rem;
        font-size: 1.1rem;
        font-weight: 700;
        color: var(--white);
        background-color: var(--accent);
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: opacity 0.2s ease;
    }
    .submit-button:hover {
        opacity: 0.9;
    }

    /* Responsive adjustments */
    @media (max-width: 900px) {
        .form-container {
            grid-template-columns: 1fr;
        }
        h1 {
            font-size: 3rem;
        }
        .text-content {
            text-align: center;
        }
        .text-content p {
            margin-left: auto;
            margin-right: auto;
        }
    }
</style>